<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tabloAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:text="Starry Night"
        android:textColor="#605B5B"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tabloImg"
        app:layout_constraintTop_toBottomOf="@+id/tabloImg" />

    <ImageView
        android:id="@+id/tabloImg"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/sepeteEkle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="Sepete Ekle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tabloAd"
        app:layout_constraintTop_toBottomOf="@+id/tabloAd" />

    <TextView
        android:id="@+id/fiyatText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="125"
        android:textColor="#676161"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/sepeteEkle"
        app:layout_constraintEnd_toEndOf="@+id/tabloImg"
        app:layout_constraintTop_toTopOf="@+id/sepeteEkle"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/sanatciAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="Van Gogh"
        android:textColor="#777575"
        app:layout_constraintBottom_toTopOf="@+id/sepeteEkle"
        app:layout_constraintStart_toStartOf="@+id/tabloAd"
        app:layout_constraintTop_toBottomOf="@+id/tabloAd"
        app:layout_constraintVertical_bias="0.529" />

    <TextView
        android:id="@+id/tabloBoyutText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="75*50 cm"
        android:textColor="#757272"
        app:layout_constraintBottom_toBottomOf="@+id/tabloAd"
        app:layout_constraintStart_toEndOf="@+id/tabloAd"
        app:layout_constraintTop_toTopOf="@+id/tabloAd" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="TL"
        app:layout_constraintBottom_toBottomOf="@+id/fiyatText"
        app:layout_constraintStart_toEndOf="@+id/fiyatText" />

</androidx.constraintlayout.widget.ConstraintLayout>